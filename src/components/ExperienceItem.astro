---
import TechnologyBadget from './TechnologyBadget.astro';

interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
  company: string;
  tags: {
    name: string;
    class: string;
    icon: (_props: Record<string, any>) => any;
  }[];
}

const { title, description, link, date, company, tags } = Astro.props;
---

<li class='mb-10 ms-5'>
  <div
    class={`
      absolute 
      size-3 
      mt-1.5 -start-1.5
    bg-lavender rounded-full border
    `}
  >
  </div>
  <time
    class={`
      mb-1 
      text-xs md:text-sm font-normal leading-none text-lavender/60
    `}
  >
    {date}
  </time>
  <h3
    class={`
      text-base md:text-xl font-bold text-electric-purple
    `}
  >
    {title}
  </h3>
  <h2
    class={`
      text-sm md:text-base font-semibold text-white/80
    `}
  >
    {company}
  </h2>
  <p
    class={`
      my-4
      text-base 
      font-normal text-white/80 text-pretty
    `}
  >
    {description}
  </p>
  <div class='mb-4 flex flex-row gap-x-2 gap-y-1 flex-wrap'>
    {
      tags.map(({ name, icon: Icon, class: className }) => (
        <TechnologyBadget class={`${className} text-xs`}>
          <Icon class={`size-5 md:size-6`} /> {name}
        </TechnologyBadget>
      ))
    }
  </div>

  <!-- TODO: HACER QUE ESTO REDIRIGA A UNA VISTA CON MAS DETALLE O ABRA UN PEQUEÃ‘O MENU OCON MAS DETALLES -->
  {
    link && (
      <a
        href={link}
        class='inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700'
      >
        See more{' '}
        <svg
          class='w-3 h-3 ms-2 rtl:rotate-180'
          aria-hidden='true'
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 14 10'
        >
          <path
            stroke='currentColor'
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M1 5h12m0 0L9 1m4 4L9 9'
          />
        </svg>
      </a>
    )
  }
</li>
