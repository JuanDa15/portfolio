---
import TechnologyBadget from './TechnologyBadget.astro';

interface Props {
  title: string;
  description: string;
  link?: string;
  github: string;
  image: string;
  tags: {
    name: string;
    class: string;
    icon: (_props: Record<string, any>) => any;
  }[];
}

const { description, github, image, tags, title, link } = Astro.props;
---

<article class='border border-white/10 p-3 rounded-lg shadow-sm shadow-black'>
  <h3 class='text-xl font-semibold text-electric-purple mb-2'>{title}</h3>
  <p class='text-lg mb-4 text-pretty'>{description}</p>
  <ul class='flex flex-row gap-3 my-3'>
    {
      tags.map((tag) => (
        <li>
          <TechnologyBadget>
            <tag.icon class='h-5 w-5' />
            {tag.name}
          </TechnologyBadget>
        </li>
      ))
    }
  </ul>
  <img class='rounded shadow-2xl shadow-white/5' src={image} />
</article>
