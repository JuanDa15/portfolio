---
import TechnologyBadget from './TechnologyBadget.astro';

interface Props {
  title: string;
  description: string;
  link?: string;
  github: string;
  image: string;
  tags: {
    name: string;
    class: string;
    icon: (_props: Record<string, any>) => any;
  }[];
  class?: string;
}

const { description, github, image, tags, title, link } = Astro.props;
---

<article
  class={`
    w-[280px]
    p-3  
    flex-shrink-0
    border border-white/10 rounded-lg
    snap-center
  `}
>
  <h3
    class={`
      text-lg md:text-xl font-semibold text-electric-purple 
      mb-2
    `}
  >
    {title}
  </h3>
  <p
    class={`
      text-sm md:text-base text-pretty 
      mb-4 
    `}
  >
    {description}
  </p>
  <ul class='flex flex-row flex-wrap gap-x-2 gap-y-2 my-3'>
    {
      tags.map((tag) => (
        <li>
          <TechnologyBadget>
            <tag.icon class='h-5 w-5' />
            {tag.name}
          </TechnologyBadget>
        </li>
      ))
    }
  </ul>
  <img class='rounded' src={image} />
</article>
