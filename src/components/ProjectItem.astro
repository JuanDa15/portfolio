---
import { TAGS } from '../constants';
import type { TagName } from '../types';
import TechnologyBadget from './TechnologyBadget.astro';

interface Props {
  id: number;
  title: string;
  description: string;
  link?: string;
  github: string;
  preview: string;
  tags: TagName[];
  class?: string;
  images: string[];
}

const { description, github, preview, tags, title, link, id } = Astro.props;
---

<a href={`${link}/${id}`}>
  <article
    class={`
    w-[280px]
    p-3  
    flex-shrink-0
    border border-white/10 rounded-lg
    snap-center
  `}
  >
    <h3
      class={`
      text-lg md:text-xl font-semibold text-electric-purple 
      mb-2
    `}
    >
      {title}
    </h3>
    <p
      class={`
      text-sm md:text-base text-pretty text-white/80
      mb-4 
    `}
    >
      {description}
    </p>
    <ul class='flex flex-row flex-wrap gap-x-2 gap-y-2 my-3'>
      {
        tags.map((tag) => {
          const { icon: Icon, name } = TAGS[tag];
          return (
            <li>
              <TechnologyBadget>
                <Icon class='h-5 w-5' />
                {name}
              </TechnologyBadget>
            </li>
          );
        })
      }
    </ul>
    <img class='rounded' src={preview} />
  </article>
</a>
