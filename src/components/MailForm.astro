---
import Button from './Button.astro';
import Input from './Input.astro';
import Textarea from './Textarea.astro';
---

<form class='flex flex-col gap-y-8 mt-32'>
  <Input id='name' name='name' placeholder='Jhon Doe' />
  <Input id='email' name='email' placeholder='jhon@doe.com' />
  <Textarea id='subject' name='subject' placeholder='Tell me something...' />
  <div class='mt-12'>
    <Button> Send Request </Button>
  </div>
</form>
