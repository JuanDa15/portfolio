---
import { TAGS } from '../constants';
import TechnologyBadget from './TechnologyBadget.astro';

const PROJECTS = [
  {
    title: 'Project 1',
    description:
      'Lorem, ipsum dolor sit amet consectetur adipisicing elit. Quae qui cupiditate numquam eos vero distinctio suscipit delectus! Odit quasi, qui totam voluptates unde ducimus quibusdam voluptatibus blanditiis nam eligendi doloremque!',
    link: 'https://svgl.app/',
    github: 'https://github.com/pheralb/svgl',
    image: '/projects/svgl.webp',
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ description, github, image, link, tags, title }) => (
    <article>
      <h3 class='text-xl font-semibold text-electric-purple mb-2'>{title}</h3>
      <p class='text-lg mb-4 text-pretty'>{description}</p>
      <ul class='flex flex-row gap-3 my-3'>
        {tags.map((tag) => (
          <li>
            <TechnologyBadget>
              <tag.icon class='h-5 w-5' />
              {tag.name}
            </TechnologyBadget>
          </li>
        ))}
      </ul>
      <img class='rounded shadow-2xl shadow-white/5' src={image} />
    </article>
  ))
}
