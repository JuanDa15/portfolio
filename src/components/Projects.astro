---
import NextJS from '../icons/NextJS.astro';
import TailwindCSS from '../icons/TailwindCSS.astro';

const TAGS = {
  NEXT: {
    name: 'Next.js',
    class: 'bg-black text-white',
    icon: NextJS,
  },
  TAILWIND: {
    name: 'Tailwind CSS',
    class: 'bg-white text-[#73bcf6]',
    icon: TailwindCSS,
  },
};

const PROJECTS = [
  {
    title: 'Project 1',
    description:
      'Lorem, ipsum dolor sit amet consectetur adipisicing elit. Quae qui cupiditate numquam eos vero distinctio suscipit delectus! Odit quasi, qui totam voluptates unde ducimus quibusdam voluptatibus blanditiis nam eligendi doloremque!',
    link: 'https://svgl.app/',
    github: 'https://github.com/pheralb/svgl',
    image: '/projects/svgl.webp',
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ description, github, image, link, tags, title }) => (
    <article>
      <h3 class='text-xl font-semibold text-electric-purple mb-2'>{title}</h3>
      <p class='text-lg mb-4 text-pretty'>{description}</p>
      <ul class='flex flex-row gap-3 my-3'>
        {tags.map((tag) => (
          <li>
            <span
              class={`${tag.class} inline-flex flex-row items-center px-2 py-1 gap-x-2 rounded-full text-xs border-[1px] border-gray-500/60`}
            >
              <tag.icon class='h-5 w-5' /> {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img class='rounded shadow-2xl shadow-white/5' src={image} />
    </article>
  ))
}
