---
import { getAllExperience } from '../services/experience';
import ExperienceItem from './ExperienceItem.astro';

const { currentLocale } = Astro;
const EXPERIENCE = await getAllExperience(currentLocale);
---

<ol
  class={`
    relative 
    border-s border-slate-400/50  dark:border-gray- ml-3
  `}
>
  {EXPERIENCE.map((experience) => <ExperienceItem {...experience} />)}
</ol>
