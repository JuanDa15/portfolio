---
import SectionContainer from '@/components/SectionContainer.astro';
import CodeIcon from '@/icons/CodeIcon.astro';
import Layout from '@/layouts/Layout.astro';
import { getAllProjects } from '@/services/projects';
import { getI18N } from '@/i18n';
import {
  getLangFromUrl,
  useTranslatedPath
} from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const i18n = getI18N({ currentLocale: lang });
const tp = useTranslatedPath(lang);
let PROJECTS =  await getAllProjects(lang)
---

<Layout title='projects' description='...'>
  <SectionContainer class='mt-10 mb-10 max-w-[948px] lg:w-[948px]' id='projects'>
    <h2
      class={`
        text-2xl md:text-4xl lg:text-5xl font-medium 
        mb-6 md:mb-10 
        flex gap-x-4 items-center justify-center
        text-slate-800 dark:text-lavender
      `}
    >
      <CodeIcon class='w-6 h-6' />
      {i18n.PROJECTS_TITLE}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        PROJECTS.map((item) => (
          <a href={`${tp('/projects')}/${item.id}`} class="bg-neutral-100 dark:bg-neutral-900/20 rounded-lg overflow-hidden shadow-lg cursor-pointer transform transition duration-300 hover:scale-105 hover:shadow-xl">
            <div class="h-48">
              <img src="/projects/placeholder.svg" class="w-full h-full object-cover" alt={item.title}/>
            </div>
            <div class="p-4">
              <h2 class="text-xl font-semibold mb-2" transition:name={`project-title-${item.id}`}>{item.title}</h2>
              <p class="text-gray-600">{item.description}</p>
            </div>
          </a>
        ))
      }
    </div>
  </SectionContainer>
</Layout>