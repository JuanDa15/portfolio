---
import Profile from '@/components/Profile.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import { getI18N } from '@/i18n';
import Layout from '@/layouts/Layout.astro';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n.SEO_TITLE_1} description={i18n.SEO_DESCRIPTION_1}>
  <SectionContainer class='p-6'>
    <Profile class='xl:size-16 mt-6' />

    <h1
      class='mt-6 mb-14 text-2xl md:text-3xl font-semibold text-electric-purple'
    >
      {i18n.ABOUT_TITLE}
    </h1>

    <div class='flex flex-col gap-y-8 mb-28'>
      <div class='grid grid-cols-[150px_1fr]'>
        <p class='text-sm md:text-base'><b>{i18n.ABOUT_SUBTITLE_1}</b></p>
        <p class='opacity-60 text-sm md:text-base'>
          {i18n.ABOUT_DESCRIPTION_1}
        </p>
      </div>
      <div class='grid grid-cols-[150px_1fr]'>
        <p class='text-sm md:text-base'><b>{i18n.ABOUT_SUBTITLE_2}</b></p>
        <p class='opacity-60 text-sm md:text-base'>
          {i18n.ABOUT_DESCRIPTION_2}
        </p>
      </div>
      <div class='grid grid-cols-[150px_1fr]'>
        <p class='text-sm md:text-base'><b>{i18n.ABOUT_SUBTITLE_3}</b></p>
        <p class='opacity-60 text-sm md:text-base'>
          {i18n.ABOUT_DESCRIPTION_3}
        </p>
      </div>
      <div class='grid grid-cols-[150px_1fr]'>
        <p class='text-sm md:text-base'><b>{i18n.ABOUT_SUBTITLE_4}</b></p>
        <ul class='flex flex-col gap-6'>
          {
            i18n.ABOUT_WORK_HISTORY.map((HISTORY) => (
              <li>
                <p class='font-semibold opacity-80'>{HISTORY.WORK_TITLE}</p>
                <p class='opacity-60'>
                  <small>{HISTORY.WORK_DATE}</small>
                </p>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </SectionContainer>
</Layout>
